<header class="gray">
	<span class="icon favorite"></span>
	<h3><%= @stop.get('name') or 'Loading...' %></h3>
</header>
<ul class="routes">
	<% for route in @stop.get('routes'): %>
	<li><a href="/routes/<%= route.oba_id %>" class="badge badge-inverse"> <%= route.name %></a></li>
	<% end %>
</ul>
<ul class="arrivals" id="arrivals"></ul>